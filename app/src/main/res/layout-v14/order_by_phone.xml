<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/colorTextFont">

    <include
        android:layout_width="match_parent"
        android:layout_height="45dp"
        layout="@layout/tollbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#e8e8e8">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="1dp"
        android:background="@color/colorTextButton"
        android:layout_weight="0.01">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="phone"
            android:textSize="20dp"
            android:ems="10"
            android:id="@+id/ET_phone"
            android:hint="+7 (495) 505 5025"
            android:paddingLeft="10dp"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="1dp"
        android:background="@color/colorTextButton"
        android:layout_weight="0.01"
        android:id="@+id/phone_valid"
        android:visibility="gone">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="phone"
            android:textSize="20dp"
            android:ems="10"
            android:id="@+id/ET_code"
            android:hint="Код из SMS"
            android:paddingLeft="10dp"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:background="#e8e8e8">

        <Button
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_height="45dp"
            android:id="@+id/getCode"
            android:textSize="20dp"
            android:text="Получить код"
            android:gravity="center"
            style="@android:style/Theme.Dialog"
            android:textColor="@color/colorTextButton"
            android:background="@drawable/shape_button"
            android:onClick="onClick" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="#e8e8e8"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Я согласен с Лицензионным соглашением и Политикой конфиденциальности"
            android:id="@+id/textView16"
            android:textColor="#0900bc"
            android:textSize="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_horizontal" />

    </RelativeLayout>

</LinearLayout>